{
  "framework": null,
  "ignoreCommand": "exit 1",
  "installCommand": "cd frontend && npm install && cd .. && cd api && npm install",
  "buildCommand": "cd frontend && npm run build",
  "builds": [
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}