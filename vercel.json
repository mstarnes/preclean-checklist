{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/auth/google(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/refresh",
      "destination": "/api/server.js"
    },
    {
      "source": "/static/(.*)",
      "destination": "/frontend/static/$1"
    },
    {
      "source": "/asset-manifest.json",
      "destination": "/frontend/asset-manifest.json"
    },
    {
      "source": "/favicon.ico",
      "destination": "/frontend/favicon.ico"
    },
    {
      "source": "/logo192.png",
      "destination": "/frontend/logo192.png"
    },
    {
      "source": "/logo512.png",
      "destination": "/frontend/logo512.png"
    },
    {
      "source": "/manifest.json",
      "destination": "/frontend/manifest.json"
    },
    {
      "source": "/robots.txt",
      "destination": "/frontend/robots.txt"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ],
  "ignoreCommand": "exit 1"
}